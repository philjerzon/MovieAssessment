@model MovieCentral.Models.MovieListsIndexModel
@{
    List<string> movienames = new List<string>();
}

@if (Model != null)
{
    foreach (var item in Model.movieLists)
    {
        if (movienames.Contains(item.movieName))
        {

            continue;
        }
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card mx-auto" style="width: 18rem;">
                <img src="@item.imagePath" class="card-img-top img-thumbnail" alt="@item.movieName" style="height:410px;">
                <div class="card-body">
                    <h5 class="card-title">@item.movieName</h5>
                    <p class="card-text text-truncate" title="@item.movieDesc">@item.movieDesc</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Show Time : @item.show_time</li>
                    <li class="list-group-item">Total Seats : @item.seats_today (P @item.price per seat)</li>
                </ul>
                <div class="card-body">
                    <a href="/Home/Reservation?mid=@item.movieID&schedid=@item.schedId" class="card-link">Book now!</a>
                </div>
            </div>
        </div>
        movienames.Add(item.movieName);
    }
}
else
{
    <h4 class="text-center text-white">no movies found</h4>
}

