            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut",
            iconClasses: {
                error: 'bi bi-x',
                info: 'bi bi-info',
                success: 'bi bi-check',
                warning: 'bi bi-exclamation',
            }
        }
        toastr.error('@TempData["error"]');
    </script>
}
